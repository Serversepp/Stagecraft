<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.fh.albsig.SpeakerDelayCalcController"
      fx:id="delayCalc"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Label text="Speaker Delay Calculator" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- System Type -->
    <Label text="Select Dimension Type:" />
    <ComboBox fx:id="dimensionComboBox" promptText="Select Dimension Type" maxWidth="200" />

    <!-- Distance X -->
    <Label fx:id="dimensionLabelX" text="Enter X Distance:" />
    <TextField fx:id="dimensionFieldX" promptText="X Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Distance Y -->
    <Label fx:id="dimensionLabelY" text="Enter Y Distance:" />
    <TextField fx:id="dimensionFieldY" promptText="Y Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Distance Z -->
    <Label fx:id="dimensionLabelZ" text="Enter Z Distance:" />
    <TextField fx:id="dimensionFieldZ" promptText="Z Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Calculate Button -->
    <Button text="Calculate Delay" onAction="#calculateDelay" />

    <!-- Result -->
    <Label fx:id="resultLabel" text="Result: " />
</VBox>
