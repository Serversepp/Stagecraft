<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.fh.albsig.SpeakerDelayCalcController"
      fx:id="Delaycalc"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Label text="Speaker Delay Calculator" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- System Type -->
    <Label text="Select Dimension Type:" />
    <ComboBox fx:id="dimensioncombobox" promptText="Select Dimension Type" maxWidth="200" />

    <!-- Distance X -->
    <Label fx:id="xdimensionlabel" text="Enter X Distance:" />
    <TextField fx:id="xdimensionfield" promptText="X Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Distance Y -->
    <Label fx:id="ydimensionlabel" text="Enter Y Distance:" />
    <TextField fx:id="ydimensionfield" promptText="Y Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Distance Z -->
    <Label fx:id="zdimensionlabel" text="Enter Z Distance:" />
    <TextField fx:id="zdimensionfield" promptText="Z Distance in cm" maxWidth="150" alignment="CENTER" />

    <!-- Calculate Button -->
    <Button text="Calculate Delay" onAction="#calculateDelay" />

    <!-- Result -->
    <Label fx:id="resultlabel" text="Result: " />
</VBox>
