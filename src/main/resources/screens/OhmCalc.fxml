<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.fh.albsig.OhmCalcController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Label text="Ohm Calculator" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Voltage Input -->
    <Label text="Enter Voltage (V):" />
    <TextField fx:id="voltageField" promptText="Voltage in volts" />

    <!-- Current Input -->
    <Label text="Enter Current (A):" />
    <TextField fx:id="currentField" promptText="Current in amperes" />

    <!-- Calculate Button -->
    <Button text="Calculate Resistance" onAction="#handleCalculateResistance" />

    <!-- Result -->
    <Label fx:id="resultLabel" text="Result: " />
</VBox>
